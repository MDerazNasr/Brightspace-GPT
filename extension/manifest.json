{
  "manifest_version": 3,
  "name": "Brightspace GPT",
  "version": "1.0.0",
  "description": "AI-powered assistant for University of Ottawa Brightspace",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://uottawa.brightspace.com/*",
    "http://localhost:8001/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://uottawa.brightspace.com/*"],
      "js": ["content-scripts/brightspace-detector.js"],
      "run_at": "document_idle"
    }
  ]
}